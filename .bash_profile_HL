# Unity Shortcut
alias scripts="cd Assets/Scripts/"
function clean_unity {
	if [ -d "Library" ]; then
		rm -r Library
	fi
	if [ -d "Temp" ]; then
		rm -r Temp
	fi
	if [ -d "obj" ]; then
		rm -r obj
	fi
}
