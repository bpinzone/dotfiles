alias clh="clear && lh"
alias ccl='cd "$1" && clear && l'
function lt {
	# List files of a certain type.
	# Usage: ltype <file_extension>"
	local search_pattern=".*\.$1"
	local search_pattern="\.$1$"
	local exclude_pattern="\.\."
	ls -al | grep -E "$search_pattern" | grep -E -v "$exclude_pattern"
}

