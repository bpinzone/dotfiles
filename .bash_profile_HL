# Git
alias gs="git status"
alias gb="git branch"
alias gd="git diff"

# Grep
alias greptype="grep_type_f $1 $2 $3 $4 $5"
function grep_type_f {
	grep -r -n --include="*.$1" $2 . --color=always $3 $4 $5 | less
}
alias allgrep="greptype * $1 $2 $3 $4"
alias csgrep="greptype cs $1 $2 $3 $4"
alias pygrep="greptype py $1 $2 $3 $4"
alias cppgrep="greptype cpp $1 $2 $3 $4"
alias hgrep="greptype h $1 $2 $3 $4"

# Find
alias findindir="find_in_dir_f $1"
function find_in_dir_f {
	text=$1
	search="*"
	search+=$text
	search+="*"
	find . -iname $search 
}

# Sublime Shortcut
alias subl="/Applications/Sublime\ Text\ 2.app/Contents/SharedSupport/bin/subl $1"

